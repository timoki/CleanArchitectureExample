<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">15sp</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">15sp</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="NewDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="TabItemText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_bold</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="hintTextColor">@color/sub_color</item>
        <item name="boxBackgroundColor">@color/transfer</item>
        <item name="boxStrokeColor">@color/sub_color</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconDrawable">@drawable/btn_close_small</item>
    </style>

    <style name="AppEditTextAppearance" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/noto_sans_cjk_kr_medium</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="lineSpacing">3sp</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>